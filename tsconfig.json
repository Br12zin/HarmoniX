{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/Input.tsx",
    "app/pages/Login/page.jsx",
    "components/Produto/InstrumentsItem.jsx",
    "components/app-sidebar.jsx",
    "components/cardInstrumentos.tsx",
    "components/cardMarca.jsx",
    "components/carousel.jsx",
    "components/carouselProduto.jsx",
    "components/DropDawn.jsx",
    "components/product-carrousel.jsx"
  ],
  "exclude": ["node_modules"]
}
